#----------------------------------------------------------------------------------|
#                                                                                  |
#                      THIS IS A CONFIGURATION FILE FOR:                           |
#                                                                                  |
#                      GITHUB CI GENERATION OF:                                    |
#                                                                                  |
#                      PRIMADONA, MONATIP, UBEND OVERVIEW                          |
#                                                                                  |
#----------------------------------------------------------------------------------|

encoding  utf-8

#----------------------------------------------------------------------------------|
# select a source data file.
source "../../_xtherion/primadona_ubend_monatip.th"

#----------------------------------------------------------------------------------|
# input the layout files
input "../../_layouts/prima_ubend_monatip/overview_plan.thl"
input "../../_layouts/prima_ubend_monatip/overview_elevation.thl"

#----------------------------------------------------------------------------------|
# select the relevant map definitions, and levels within those maps
select mprima_ubend_monatip-p@system_migovec -map-level 1
select mprimadona_monatip-e@system_migovec -map-level 0

#----------------------------------------------------------------------------------|
# export a PLAN view, using the LAYOUT overview1 
language fr
export map -projection plan -o ../../_outputs/primadona_ubend_monatip_plan_SLO.pdf -layout overview_plan
language en
export map -projection plan -o ../../_outputs/primadona_ubend_monatip_plan_ENG.pdf -layout overview_plan

#----------------------------------------------------------------------------------|
# export an ELEVATION view, using the LAYOUT overview2
language fr
export map -projection extended -o ../../_outputs/primadona_ubend_monatip_EE_SLO.pdf -layout overview_elevation
language en
export map -projection extended -o ../../_outputs/primadona_ubend_monatip_EE_ENG.pdf -layout overview_elevation

#----------------------------------------------------------------------------------|
# export a .3d model, which can be opened in AVEN and LOCH
export model -o ../../_outputs/primadona_ubend_monatip.3d -fmt survex