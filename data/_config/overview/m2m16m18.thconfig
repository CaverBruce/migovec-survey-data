#----------------------------------------------------------------------------------|

encoding  utf-8

#----------------------------------------------------------------------------------|
# select a source data file.
source "../../_xtherion/m2m16m18.th"

#----------------------------------------------------------------------------------|
# input the layout files
input "../../_layouts/m2m16m18/overview_plan.thl" # i'll change this to m2m16m18 specific layout
#input "../../_layouts/vrtnarija/overview_plan_ENG.thl" 
#input "../../_layouts/prima_ubend_monatip/overview_elevation_SLO.thl"

#----------------------------------------------------------------------------------|
# select the relevant map definitions, and levels within those maps
select mm2m16m18-p@m2m16m18 -map-level 0

#----------------------------------------------------------------------------------|
# export a PLAN view, using the LAYOUT overview_plan_SLO or ENG 
export map -projection plan -o ../../_outputs/map/m2m16m18_plan.pdf -layout overview_plan
#export map -projection plan -o ../../_outputs/map/vrtnarija_plan_ENG.pdf -layout overview_plan_ENG

#----------------------------------------------------------------------------------|
# export an ELEVATION view, using the LAYOUT overview2

#----------------------------------------------------------------------------------|
# export a .3d model, which can be opened in AVEN and LOCH
export model -o ../../_outputs/model/m2m16m18.3d -fmt survex

#----------------------------------------------------------------------------------|
# export a .lox model, which can be opened in LOCH only
export model -o ../../_outputs/model/m2m16m18.lox