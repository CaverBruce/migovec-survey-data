#----------------------------------------------------------------------------------|

encoding  utf-8

#----------------------------------------------------------------------------------|
# select a source data file.
source "../../_xtherion/system_migovec.th"

#----------------------------------------------------------------------------------|
# input the layout files
input "../../_layouts/system_migovec/overview_plan.thl"
input "../../_layouts/system_migovec/overview_elevation.thl"

#----------------------------------------------------------------------------------|
# select the relevant map definitions, and levels within those maps
select mprimadona_ubend_monatip-p@system_migovec -map-level 0
#select mprimadona_ubend_monatip-e@system_migovec -map-level 0

#----------------------------------------------------------------------------------|
# export a PLAN view, using the LAYOUT overview1
language fr
export map -projection plan -o ../../_outputs/map/system_migovec_overview_plan_SLO.pdf -layout overview_plan

#----------------------------------------------------------------------------------|
# export an ELEVATION view, using the LAYOUT overview2
#language fr
#export map -projection extended -o ../../_outputs/map/system_migovec_overview_elevation_SLO.pdf -layout overview_elevation

