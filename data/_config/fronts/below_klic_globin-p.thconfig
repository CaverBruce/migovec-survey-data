#                      THIS IS A CONFIGURATION FILE FOR:                           |
#                                                                                  |
#                      PRIMADONA DEEP - BELOW KLIC GLOBIN                          |
#                                                                                  |
#----------------------------------------------------------------------------------|

encoding  utf-8

#----------------------------------------------------------------------------------|
# select a source data file.
source "../../primadona/_xtherion/primadona.th"

#----------------------------------------------------------------------------------|
# input the layout files
input "../../_layouts/prima_ubend_monatip/overview_plan.thl"

layout local
    copy overview_plan
    legend off
    map-comment "<lang:en>Passages discovered below Klic Globin<br>pitch. 2019 discoveries marked in red."
    code tex-map
    \def\maplayout{
        \legendbox{55}{40}{W}{\size[20]Primadonna}
        \legendbox{55}{34}{W}{\size[14]Deep Branch}
        \legendbox{55}{26}{W}{\size[10]\the\comment}
        \legendbox{55}{10}{W}{\scalebar}
        \legendbox{0}{100}{W}{\northarrow}
    }
endlayout

#----------------------------------------------------------------------------------|
# select the relevant map definitions, and levels within those maps
select mklic_globin_deep-p@primadona

#----------------------------------------------------------------------------------|
# export a PLAN view
language en
export map -projection plan -o ../../_outputs/map/below_klic_globin_plan_ENG.pdf -layout local