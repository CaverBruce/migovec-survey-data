#----------------------------------------------------------------------------------|
#                                                                                  |
#                      THIS IS A CONFIGURATION FILE FOR:                           |
#                                                                                  |
#                      PRIMADONA ENTRANCE                                          |
#                                                                                  |
#----------------------------------------------------------------------------------|

encoding  utf-8

#----------------------------------------------------------------------------------|
# select a source data file.
source "../../primadona/_xtherion/primadona.th"

#----------------------------------------------------------------------------------|
# input the layout files
input "../../_layouts/prima_ubend_monatip/overview_plan.thl"

layout local
	copy overview_plan
	legend off
	map-comment "<lang:en>A new entrance. 2019<br>discoveries marked in red."
	code tex-map
	\def\maplayout{
	\legendbox{60}{100}{NW}{\size[20]Belladonna}
	\legendbox{60}{93}{NW}{\size[14]Entrance Series}
	\legendbox{60}{86}{NW}{\size[10]\the\comment}
	\legendbox{55}{62}{NW}{\scalebar}
	\legendbox{10}{80}{NW}{\northarrow}
	}
endlayout

#----------------------------------------------------------------------------------|
# select the relevant map definitions, and levels within those maps
select mentrance-p@primadona

#----------------------------------------------------------------------------------|
# export a PLAN view
language en
export map -projection plan -o ../../_outputs/map/entrance_plan_ENG.pdf -layout local