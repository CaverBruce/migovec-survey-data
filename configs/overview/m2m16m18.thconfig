encoding  utf-8
#----------------------------------------------------------------------------------|
#                                                                                  |
#                      THIS IS A CONFIGURATION FILE FOR:                           |
#                                                                                  |
#                      M2 M16 M18 (THE OLD SYSTEM)                                 |
#                                                                                  |
#----------------------------------------------------------------------------------|


#----------------------------------------------------------------------------------|
# select a source data file.
source "../../data/m2m16m18.th"

#----------------------------------------------------------------------------------|
# input the layout files
input "../../layouts/base-p.thl"
input "../../layouts/mods.thl"

#----------------------------------------------------------------------------------|
# select the relevant map definitions, and levels within those maps
select m-m2m16m18-p@m2m16m18

#----------------------------------------------------------------------------------|
# export a PLAN view, using the LAYOUT overview_plan_SLO or ENG
layout plan
	copy base-p
	copy colour-by-depth
endlayout
export map -projection plan -o ../../outputs/m2m16m18_plan.pdf -layout plan
#export map -projection plan -o ../../outputs/vrtnarija_plan_ENG.pdf -layout overview_plan_ENG

#----------------------------------------------------------------------------------|
# export an ELEVATION view, using the LAYOUT overview2

#----------------------------------------------------------------------------------|
# export a .3d model, which can be opened in AVEN and LOCH
export model -o ../../outputs/m2m16m18.3d -fmt survex

#----------------------------------------------------------------------------------|
# export a .lox model, which can be opened in LOCH only
export model -o ../../outputs/m2m16m18.lox
